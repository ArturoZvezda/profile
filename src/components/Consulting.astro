---
const { t } = Astro.props;
---

<section id="consulting" class="relative py-20 sm:py-32 overflow-hidden">
  <!-- Decorative holographic lines -->
  <div class="absolute top-0 left-0 w-full h-px bg-gradient-to-r from-transparent via-cyan-500/50 to-transparent"></div>
  <div class="absolute bottom-0 right-0 w-full h-px bg-gradient-to-r from-transparent via-magenta-500/50 to-transparent"></div>

  <!-- Background glow -->
  <div class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 w-[800px] h-[800px]
              bg-gradient-radial from-cyan-500/5 via-transparent to-transparent rounded-full blur-3xl"></div>

  <div class="container mx-auto px-4 sm:px-6 relative z-10">
    <!-- Hero header -->
    <div class="max-w-5xl mx-auto text-center mb-16 sm:mb-20">
      <div class="inline-block glass-card px-6 py-2 rounded-full border border-cyan-500/30 mb-6 subtle-float">
        <span class="text-sm uppercase tracking-wider text-cyan-400 font-semibold font-mono">
          {t.consulting.badge}
        </span>
      </div>

      <h2 class="text-4xl sm:text-5xl md:text-7xl font-bold mb-6 leading-tight">
        <span class="holographic-text">{t.consulting.title}</span>
      </h2>

      <p class="text-xl sm:text-2xl text-gray-300 mb-4 font-light">
        {t.consulting.subtitle}
      </p>

      <p class="text-base text-gray-400 max-w-3xl mx-auto leading-relaxed">
        {t.consulting.description}
      </p>

      <!-- Decorative separator -->
      <div class="flex items-center justify-center gap-3 mt-10">
        <div class="w-2 h-2 bg-cyan-500 rounded-full shadow-[0_0_10px_rgba(0,255,255,0.5)]"></div>
        <div class="w-24 h-px bg-gradient-to-r from-cyan-500 via-magenta-500 to-blue-500"></div>
        <div class="w-2 h-2 bg-magenta-500 rounded-full shadow-[0_0_10px_rgba(255,0,255,0.5)]"></div>
        <div class="w-24 h-px bg-gradient-to-r from-blue-500 via-cyan-500 to-magenta-500"></div>
        <div class="w-2 h-2 bg-blue-500 rounded-full shadow-[0_0_10px_rgba(0,128,255,0.5)]"></div>
      </div>
    </div>

    <!-- Services grid -->
    <div class="max-w-6xl mx-auto grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mb-16">
      {t.consulting.services.map((service: any, index: number) => (
        <div class="consulting-card group glass-card card-3d magnetic p-8 rounded-lg
                    hover:border-cyan-400/50 transition-all duration-500 relative overflow-hidden">
          <!-- Number badge -->
          <div class="absolute top-6 right-6 w-12 h-12 rounded-full bg-gradient-to-br from-cyan-500/20 to-blue-600/20
                      border border-cyan-500/30 flex items-center justify-center
                      group-hover:shadow-[0_0_20px_rgba(0,255,255,0.3)] transition-shadow duration-300">
            <span class="text-lg font-bold text-cyan-400 font-mono">
              {(index + 1).toString().padStart(2, '0')}
            </span>
          </div>

          <!-- Content -->
          <div class="card-3d-inner pr-12">
            <h3 class="text-xl font-bold text-white mb-4 group-hover:text-cyan-400 transition-colors duration-300">
              {service.title}
            </h3>

            <p class="text-sm text-gray-400 leading-relaxed group-hover:text-gray-300 transition-colors duration-300">
              {service.description}
            </p>
          </div>

          <!-- Animated corner accent -->
          <div class="absolute bottom-0 left-0 w-0 h-0.5 bg-gradient-to-r from-cyan-500 to-blue-600
                      group-hover:w-full transition-all duration-700"></div>
          <div class="absolute bottom-0 left-0 w-0.5 h-0 bg-gradient-to-b from-cyan-500 to-blue-600
                      group-hover:h-full transition-all duration-700"></div>

          <!-- Hover glow -->
          <div class="absolute inset-0 bg-gradient-to-br from-cyan-500/0 via-cyan-500/0 to-cyan-500/5
                      opacity-0 group-hover:opacity-100 transition-opacity duration-500 pointer-events-none rounded-lg"></div>
        </div>
      ))}
    </div>

    <!-- Call to action -->
    <div class="max-w-5xl mx-auto">
      <div class="relative glass-card p-10 sm:p-16 rounded-2xl overflow-hidden border border-cyan-500/30
                  shadow-[0_0_50px_rgba(0,255,255,0.1)]">
        <!-- Decorative holographic corners -->
        <div class="absolute top-0 left-0 w-20 h-20 border-l-2 border-t-2 border-cyan-500/50 rounded-tl-2xl"></div>
        <div class="absolute top-0 right-0 w-20 h-20 border-r-2 border-t-2 border-magenta-500/50 rounded-tr-2xl"></div>
        <div class="absolute bottom-0 left-0 w-20 h-20 border-l-2 border-b-2 border-magenta-500/50 rounded-bl-2xl"></div>
        <div class="absolute bottom-0 right-0 w-20 h-20 border-r-2 border-b-2 border-cyan-500/50 rounded-br-2xl"></div>

        <!-- Content -->
        <div class="relative z-10 text-center">
          <h3 class="text-3xl sm:text-4xl font-bold text-white mb-4">
            {t.consulting.cta.title}
          </h3>
          <p class="text-lg text-gray-300 mb-8 max-w-2xl mx-auto">
            {t.consulting.cta.description}
          </p>
          <a href="#contact"
             class="magnetic inline-flex items-center gap-3 px-10 py-4 bg-gradient-to-r from-cyan-500 to-blue-600
                    text-white font-bold rounded-lg hover:shadow-[0_0_40px_rgba(0,255,255,0.5)]
                    transition-all duration-300 transform hover:scale-105 group">
            <span>{t.consulting.cta.button}</span>
            <svg class="w-5 h-5 group-hover:translate-x-1 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
            </svg>
          </a>
        </div>

        <!-- Background pattern -->
        <div class="absolute inset-0 opacity-5">
          <div class="tech-grid w-full h-full"></div>
        </div>
      </div>
    </div>
  </div>
</section>
