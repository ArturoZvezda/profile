---
const { t } = Astro.props;
---

<section id="consulting" class="relative py-20 sm:py-32 overflow-hidden">
  <!-- Decorative background elements -->
  <div class="absolute top-0 left-0 w-full h-px bg-gradient-to-r from-transparent via-white/20 to-transparent"></div>
  <div class="absolute bottom-0 right-0 w-full h-px bg-gradient-to-r from-transparent via-white/20 to-transparent"></div>

  <div class="container mx-auto px-4 sm:px-6">
    <!-- Hero header -->
    <div class="max-w-4xl mx-auto text-center mb-16 sm:mb-20">
      <div class="inline-block px-4 py-1 bg-white/5 border border-white/10 mb-6 subtle-float">
        <span class="text-xs uppercase tracking-wider text-gray-500 font-medium">{t.consulting.badge}</span>
      </div>

      <h2 class="text-4xl sm:text-5xl md:text-6xl font-bold text-white mb-6 leading-tight">
        {t.consulting.title}
      </h2>

      <p class="text-xl sm:text-2xl text-gray-400 mb-4 font-light">
        {t.consulting.subtitle}
      </p>

      <p class="text-base text-gray-500 max-w-3xl mx-auto leading-relaxed">
        {t.consulting.description}
      </p>

      <!-- Visual separator -->
      <div class="flex items-center justify-center gap-2 mt-8">
        <div class="w-1 h-1 bg-white/20 rounded-full"></div>
        <div class="w-12 h-px bg-gradient-to-r from-transparent via-white/20 to-transparent"></div>
        <div class="w-1 h-1 bg-white/20 rounded-full"></div>
      </div>
    </div>

    <!-- Services grid -->
    <div class="max-w-6xl mx-auto grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      {t.consulting.services.map((service: any, index: number) => (
        <div class="consulting-card group relative bg-[#0f0f0f] p-6 border border-[#2a2a2a] hover:border-white/20 transition-all duration-500 parallax-container overflow-hidden">
          <!-- Gradient overlay on hover -->
          <div class="absolute inset-0 bg-gradient-to-br from-white/5 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>

          <!-- Number indicator -->
          <div class="absolute top-4 right-4 text-6xl font-black text-white/5 group-hover:text-white/10 transition-colors duration-500">
            {(index + 1).toString().padStart(2, '0')}
          </div>

          <!-- Content -->
          <div class="relative z-10">
            <h3 class="text-lg font-semibold text-white mb-3 group-hover:text-white transition-colors duration-300">
              {service.title}
            </h3>

            <p class="text-sm text-gray-500 leading-relaxed group-hover:text-gray-400 transition-colors duration-300">
              {service.description}
            </p>
          </div>

          <!-- Animated bottom border -->
          <div class="absolute bottom-0 left-0 h-px w-0 bg-gradient-to-r from-white/50 to-white/10 group-hover:w-full transition-all duration-700"></div>
        </div>
      ))}
    </div>

    <!-- Call to action -->
    <div class="max-w-4xl mx-auto text-center mt-16 sm:mt-20">
      <div class="relative bg-gradient-to-br from-[#0f0f0f] to-[#141414] p-8 sm:p-12 border border-white/10 overflow-hidden group">
        <!-- Decorative corners -->
        <div class="absolute top-0 left-0 w-12 h-12 border-l-2 border-t-2 border-white/20"></div>
        <div class="absolute top-0 right-0 w-12 h-12 border-r-2 border-t-2 border-white/20"></div>
        <div class="absolute bottom-0 left-0 w-12 h-12 border-l-2 border-b-2 border-white/20"></div>
        <div class="absolute bottom-0 right-0 w-12 h-12 border-r-2 border-b-2 border-white/20"></div>

        <h3 class="text-2xl sm:text-3xl font-bold text-white mb-4">
          {t.consulting.cta.title}
        </h3>
        <p class="text-gray-400 mb-8">
          {t.consulting.cta.description}
        </p>
        <a href="#contact" class="inline-block px-8 py-4 bg-white text-black font-semibold hover:bg-gray-200 transition-all duration-300 transform hover:scale-105">
          {t.consulting.cta.button}
        </a>
      </div>
    </div>
  </div>
</section>
