<div class="dark-background fixed inset-0 -z-10 overflow-hidden">
  <!-- Subtle gradient overlay -->
  <div class="absolute inset-0 bg-gradient-to-b from-[#0a0a0a] via-[#0f0f0f] to-[#0a0a0a]"></div>

  <!-- Minimal grid with parallax -->
  <div class="parallax-layer-1 absolute inset-0 opacity-[0.03]" style="background-image: linear-gradient(#ffffff 1px, transparent 1px), linear-gradient(90deg, #ffffff 1px, transparent 1px); background-size: 100px 100px;"></div>

  <!-- Floating decorative elements -->
  <div class="parallax-layer-2 absolute top-20 right-20 w-32 h-32 border border-[#1a1a1a] opacity-50 subtle-float"></div>
  <div class="parallax-layer-2 absolute bottom-40 left-10 w-24 h-24 border border-[#1a1a1a] opacity-30 subtle-float" style="animation-delay: 2s;"></div>
  <div class="parallax-layer-3 absolute top-1/2 left-1/4 w-16 h-16 border border-[#1a1a1a] opacity-20 subtle-float" style="animation-delay: 4s;"></div>
</div>
