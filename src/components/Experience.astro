---
const { t } = Astro.props;
---

<section id="experience" class="relative py-20 sm:py-32">
  <div class="container mx-auto px-4 sm:px-6">
    <h2 class="text-3xl sm:text-4xl font-semibold text-white mb-12">
      {t.experience.title}
    </h2>
    <div class="max-w-4xl">
      <div class="space-y-12">
        {t.experience.jobs.map((job: any) => (
          <div class="experience-item relative border-l-2 border-[#2a2a2a] pl-6 pb-8 hover:border-gray-600 transition-all duration-300 parallax-container">
            <div class="absolute w-3 h-3 bg-[#2a2a2a] rounded-full -left-[7px] top-0 transition-all duration-300 hover:w-4 hover:h-4 hover:-left-[8px] hover:bg-gray-600"></div>

            <div class="mb-2">
              <h3 class="text-xl font-semibold text-white">
                {job.company}
              </h3>
              <h4 class="text-base text-gray-400 mt-1">{job.role}</h4>
              <span class="text-sm text-gray-600 mt-1 inline-block">
                {job.period}
              </span>
            </div>

            <p class="text-base text-gray-500 mb-4 leading-relaxed">{job.description}</p>

            <div class="flex flex-wrap gap-2">
              {job.stack.split(', ').map((tech: string) => (
                <span class="px-3 py-1 bg-[#141414] border border-[#2a2a2a] text-gray-600 text-xs">
                  {tech}
                </span>
              ))}
            </div>
          </div>
        ))}
      </div>
    </div>
  </div>
</section>
