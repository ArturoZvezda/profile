---
const { t } = Astro.props;
---

<section class="relative min-h-screen flex items-center overflow-hidden py-12 scanline">
  <!-- Cyber Grid Background -->
  <div class="absolute inset-0 cyber-grid opacity-20"></div>

  <!-- Geometric Shapes -->
  <div class="absolute top-20 right-10 w-32 h-32 border-2 border-pink-500 rotate-45 animate-pulse opacity-30"></div>
  <div class="absolute bottom-20 left-10 w-24 h-24 border-2 border-cyan-400 opacity-30 float"></div>

  <div class="container mx-auto px-4 sm:px-6 relative z-10">
    <div class="max-w-5xl mx-auto text-center">
      <!-- Main Name with Glitch -->
      <div class="mb-6 relative">
        <h1 class="text-4xl sm:text-5xl md:text-6xl lg:text-7xl font-black text-transparent bg-clip-text bg-gradient-to-r from-cyan-400 via-pink-500 to-cyan-400 leading-tight mb-2 fade-in-up" style="font-family: 'Orbitron', sans-serif;">
          Arturo Zvezda
        </h1>
      </div>

      <!-- Role with Neon Effect -->
      <div class="mb-6">
        <h2 class="text-2xl sm:text-3xl md:text-4xl lg:text-5xl font-bold text-cyan-400 mb-2 fade-in-up" style="font-family: 'Orbitron', sans-serif; animation-delay: 0.4s; text-shadow: 0 0 20px rgba(5, 217, 232, 0.8);">
          {t.hero.title}
        </h2>
        <div class="flex justify-center items-center gap-3 mt-4 fade-in-up" style="animation-delay: 0.6s;">
          <div class="h-px w-12 bg-gradient-to-r from-transparent to-cyan-400"></div>
          <span class="text-pink-500 font-bold tracking-widest uppercase text-sm" style="font-family: 'Orbitron', sans-serif;">DevOps Pro</span>
          <div class="h-px w-12 bg-gradient-to-l from-transparent to-pink-500"></div>
        </div>
      </div>

      <!-- Description -->
      <p class="text-lg sm:text-xl text-cyan-300/90 mb-4 font-medium fade-in-up" style="animation-delay: 0.8s;">
        {t.hero.subtitle}
      </p>
      <p class="text-sm sm:text-base text-gray-400 max-w-3xl mx-auto mb-8 px-4 leading-relaxed fade-in-up" style="animation-delay: 1s;">
        {t.hero.description}
      </p>

      <!-- CTA Buttons -->
      <div class="flex gap-4 sm:gap-6 justify-center flex-wrap px-4 fade-in-up" style="animation-delay: 1.2s;">
        <a href="#contact" class="group relative px-6 sm:px-8 py-3 sm:py-4 bg-gradient-to-r from-cyan-500 to-cyan-600 text-black rounded font-bold uppercase tracking-wider overflow-hidden neon-button transform hover:scale-105 transition-all duration-300" style="font-family: 'Orbitron', sans-serif;">
          <span class="relative z-10">{t.hero.cta}</span>
          <div class="absolute inset-0 bg-gradient-to-r from-pink-500 to-pink-600 opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
        </a>
        <a href="https://www.linkedin.com/in/israel-gc" target="_blank" class="px-6 sm:px-8 py-3 sm:py-4 border-2 border-pink-500 text-pink-500 rounded font-bold uppercase tracking-wider hover:bg-pink-500 hover:text-black transition-all duration-300 transform hover:scale-105 neon-button" style="font-family: 'Orbitron', sans-serif;">
          LinkedIn
        </a>
      </div>

      <!-- Tech Stack Pills -->
      <div class="mt-12 flex flex-wrap justify-center gap-3 px-4 fade-in-up" style="animation-delay: 1.4s;">
        {['Laravel', 'Vue.js', 'Docker', 'AWS', 'DevOps', 'Kubernetes'].map((tech) => (
          <span class="px-4 py-2 bg-[#0a0a1e]/80 border border-cyan-400/50 text-cyan-400 rounded-full text-xs sm:text-sm font-semibold backdrop-blur-sm hover:border-pink-500 hover:text-pink-500 transition-all duration-300 cursor-default">
            {tech}
          </span>
        ))}
      </div>
    </div>
  </div>

  <!-- Scroll Indicator -->
  <div class="absolute bottom-8 left-1/2 transform -translate-x-1/2 flex flex-col items-center gap-2 animate-bounce">
    <span class="text-cyan-400 text-xs uppercase tracking-wider">Scroll</span>
    <svg class="w-6 h-6 text-cyan-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
    </svg>
  </div>
</section>
