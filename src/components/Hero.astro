---
const { t } = Astro.props;
---

<section class="relative min-h-screen flex items-center overflow-hidden py-20">
  <div class="container mx-auto px-4 sm:px-6 relative z-10">
    <div class="max-w-4xl mx-auto">
      <!-- Main Name -->
      <h1 class="text-5xl sm:text-6xl md:text-7xl lg:text-8xl font-bold text-white leading-tight mb-8 fade-in-up">
        Arturo Zvezda
      </h1>

      <!-- Role -->
      <h2 class="text-2xl sm:text-3xl md:text-4xl font-light text-gray-400 mb-8 fade-in-up" style="animation-delay: 0.2s;">
        {t.hero.title}
      </h2>

      <!-- Description -->
      <p class="text-lg sm:text-xl text-gray-500 mb-4 max-w-2xl fade-in-up" style="animation-delay: 0.4s;">
        {t.hero.subtitle}
      </p>
      <p class="text-base text-gray-600 max-w-2xl mb-12 leading-relaxed fade-in-up" style="animation-delay: 0.6s;">
        {t.hero.description}
      </p>

      <!-- CTA Buttons -->
      <div class="flex gap-4 flex-wrap fade-in-up" style="animation-delay: 0.8s;">
        <a href="#contact" class="px-6 py-3 bg-white text-black font-medium hover:bg-gray-200 transition-colors duration-200">
          {t.hero.cta}
        </a>
        <a href="https://www.linkedin.com/in/israel-gc" target="_blank" class="px-6 py-3 border border-[#2a2a2a] text-gray-400 hover:text-white hover:border-gray-600 transition-all duration-200">
          LinkedIn
        </a>
      </div>

      <!-- Tech Stack Pills -->
      <div class="mt-16 flex flex-wrap gap-3 fade-in-up" style="animation-delay: 1s;">
        {['Laravel', 'Vue.js', 'Docker', 'AWS', 'DevOps', 'Ansible'].map((tech) => (
          <span class="px-4 py-2 bg-[#141414] border border-[#2a2a2a] text-gray-500 text-sm">
            {tech}
          </span>
        ))}
      </div>
    </div>
  </div>
</section>
