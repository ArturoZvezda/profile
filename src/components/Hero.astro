---
const { t } = Astro.props;
---

<section class="relative min-h-screen flex items-center overflow-hidden py-20">
  <!-- Decorative holographic corners -->
  <div class="absolute top-0 left-0 w-64 h-64 border-t-2 border-l-2 border-cyan-500/30 pointer-events-none"></div>
  <div class="absolute bottom-0 right-0 w-64 h-64 border-b-2 border-r-2 border-magenta-500/30 pointer-events-none"></div>

  <div class="container mx-auto px-4 sm:px-6 relative z-10">
    <div class="max-w-5xl mx-auto">
      <!-- Main Name with holographic effect -->
      <div class="relative mb-8">
        <h1 class="text-6xl sm:text-7xl md:text-8xl lg:text-9xl font-bold leading-tight fade-in-up
                   holographic-text relative z-10">
          Arturo Zvezda
        </h1>
        <!-- Glowing shadow layer -->
        <div class="absolute inset-0 text-6xl sm:text-7xl md:text-8xl lg:text-9xl font-bold leading-tight
                    text-cyan-400/20 blur-xl -z-10">
          Arturo Zvezda
        </div>
      </div>

      <!-- Role with animated typing effect -->
      <div class="relative mb-8">
        <h2 class="text-3xl sm:text-4xl md:text-5xl font-light text-white mb-2 fade-in-up" style="animation-delay: 0.2s;">
          {t.hero.title}
        </h2>
        <div class="h-1 w-32 bg-gradient-to-r from-cyan-500 via-magenta-500 to-transparent rounded-full fade-in-up" style="animation-delay: 0.3s;"></div>
      </div>

      <!-- Description with glass card effect -->
      <div class="glass-card p-6 sm:p-8 max-w-3xl mb-12 fade-in-up" style="animation-delay: 0.4s;">
        <p class="text-lg sm:text-xl text-gray-300 mb-4 leading-relaxed">
          {t.hero.subtitle}
        </p>
        <p class="text-base text-gray-400 leading-relaxed">
          {t.hero.description}
        </p>
      </div>

      <!-- CTA Buttons with hover effects -->
      <div class="flex gap-4 flex-wrap mb-16 fade-in-up" style="animation-delay: 0.6s;">
        <a href="#contact" class="magnetic group px-8 py-4 bg-gradient-to-r from-cyan-500 to-blue-600
                                   text-white font-semibold rounded-lg overflow-hidden relative
                                   transition-all duration-300 hover:shadow-[0_0_30px_rgba(0,255,255,0.5)]">
          <span class="relative z-10">{t.hero.cta}</span>
          <div class="absolute inset-0 bg-gradient-to-r from-cyan-400 to-blue-500 opacity-0
                      group-hover:opacity-100 transition-opacity duration-300"></div>
        </a>
        <a href="https://www.linkedin.com/in/israel-gc" target="_blank"
           class="magnetic px-8 py-4 border-2 border-cyan-500/50 text-cyan-400 font-semibold rounded-lg
                  hover:bg-cyan-500/10 hover:border-cyan-400 hover:shadow-[0_0_20px_rgba(0,255,255,0.3)]
                  transition-all duration-300">
          LinkedIn
        </a>
      </div>

      <!-- Tech Stack with enhanced 3D cards -->
      <div class="fade-in-up" style="animation-delay: 0.8s;">
        <p class="text-sm text-cyan-400/80 mb-4 font-mono tracking-wider">{t.decorative.techStack}</p>
        <div class="flex flex-wrap gap-4">
          {['Laravel', 'Vue.js', 'Docker', 'AWS', 'DevOps', 'Ansible'].map((tech, index) => (
            <div class="tech-badge magnetic group relative px-6 py-3 glass-card rounded-lg overflow-hidden
                        cursor-pointer transform hover:scale-105 transition-all duration-300"
                 style={`animation-delay: ${0.9 + index * 0.1}s;`}>
              <span class="relative z-10 text-sm font-medium text-gray-300 group-hover:text-white transition-colors">
                {tech}
              </span>
              <div class="absolute inset-0 bg-gradient-to-r from-cyan-500/0 via-cyan-500/20 to-cyan-500/0
                          translate-x-[-100%] group-hover:translate-x-[100%] transition-transform duration-700"></div>
            </div>
          ))}
        </div>
      </div>

      <!-- Scroll indicator -->
      <div class="absolute bottom-10 left-1/2 transform -translate-x-1/2 fade-in-up" style="animation-delay: 1.2s;">
        <div class="flex flex-col items-center gap-2 text-cyan-400/60 animate-bounce">
          <span class="text-xs font-mono tracking-wider">{t.decorative.scroll}</span>
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
          </svg>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  /* Tech badge shimmer effect */
  .tech-badge::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(0, 255, 255, 0.3), transparent);
    transition: left 0.5s;
  }

  .tech-badge:hover::before {
    left: 100%;
  }
</style>
