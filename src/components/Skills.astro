---
const { t } = Astro.props;
---

<section id="skills" class="relative py-20 sm:py-32">
  <div class="container mx-auto px-4 sm:px-6">
    <h2 class="text-3xl sm:text-4xl font-semibold text-white mb-12">
      {t.skills.title}
    </h2>
    <div class="max-w-5xl grid grid-cols-1 md:grid-cols-3 gap-8">

      <!-- Languages -->
      <div class="skill-card relative bg-[#0f0f0f] p-6 border border-[#2a2a2a] hover:border-gray-600 transition-all duration-300 parallax-container mb-8">
        <h3 class="text-lg font-semibold mb-6 text-white">
          {t.skills.categories.languages.title}
        </h3>
        <div class="mb-6">
          <h4 class="font-medium mb-3 text-xs text-gray-600 uppercase tracking-wider">{t.skills.categories.languages.advanced}</h4>
          <div class="flex flex-wrap gap-2">
            {t.skills.categories.languages.items.advanced.map((skill: string) => (
              <span class="px-3 py-1.5 bg-white text-black text-xs font-medium">
                {skill}
              </span>
            ))}
          </div>
        </div>
        <div>
          <h4 class="font-medium mb-3 text-xs text-gray-600 uppercase tracking-wider">{t.skills.categories.languages.intermediate}</h4>
          <div class="flex flex-wrap gap-2">
            {t.skills.categories.languages.items.intermediate.map((skill: string) => (
              <span class="px-3 py-1.5 bg-[#141414] border border-[#2a2a2a] text-gray-500 text-xs">
                {skill}
              </span>
            ))}
          </div>
        </div>
      </div>

      <!-- Frameworks -->
      <div class="skill-card relative bg-[#0f0f0f] p-6 border border-[#2a2a2a] hover:border-gray-600 transition-all duration-300 parallax-container mb-8">
        <h3 class="text-lg font-semibold mb-6 text-white">
          {t.skills.categories.frameworks.title}
        </h3>
        <div class="mb-6">
          <h4 class="font-medium mb-3 text-xs text-gray-600 uppercase tracking-wider">{t.skills.categories.frameworks.advanced || t.skills.categories.languages.advanced}</h4>
          <div class="flex flex-wrap gap-2">
            {t.skills.categories.frameworks.items.advanced.map((skill: string) => (
              <span class="px-3 py-1.5 bg-white text-black text-xs font-medium">
                {skill}
              </span>
            ))}
          </div>
        </div>
        <div>
          <h4 class="font-medium mb-3 text-xs text-gray-600 uppercase tracking-wider">{t.skills.categories.frameworks.intermediate || t.skills.categories.languages.intermediate}</h4>
          <div class="flex flex-wrap gap-2">
            {t.skills.categories.frameworks.items.intermediate.map((skill: string) => (
              <span class="px-3 py-1.5 bg-[#141414] border border-[#2a2a2a] text-gray-500 text-xs">
                {skill}
              </span>
            ))}
          </div>
        </div>
      </div>

      <!-- Other Tools -->
      <div class="skill-card relative bg-[#0f0f0f] p-6 border border-[#2a2a2a] hover:border-gray-600 transition-all duration-300 parallax-container mb-8">
        <h3 class="text-lg font-semibold mb-6 text-white">
          {t.skills.categories.other.title}
        </h3>
        <div class="flex flex-wrap gap-2">
          {t.skills.categories.other.items.map((skill: string) => (
            <span class="px-3 py-1.5 bg-[#141414] border border-[#2a2a2a] text-gray-500 text-xs">
              {skill}
            </span>
          ))}
        </div>
      </div>

    </div>
  </div>
</section>
