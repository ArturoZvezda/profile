---
const { t } = Astro.props;
---

<section id="skills" class="relative py-20 sm:py-32 overflow-hidden">
  <div class="container mx-auto px-4 sm:px-6">
    <!-- Section header -->
    <div class="flex items-center gap-4 mb-12">
      <div class="w-2 h-16 bg-gradient-to-b from-blue-500 to-magenta-600 rounded-full"></div>
      <div>
        <p class="text-sm font-mono text-blue-400/80 tracking-wider mb-1">TECH_SKILLS://</p>
        <h2 class="text-4xl sm:text-5xl font-bold text-white">
          {t.skills.title}
        </h2>
      </div>
    </div>

    <div class="max-w-6xl grid grid-cols-1 md:grid-cols-3 gap-6">

      <!-- Languages -->
      <div class="skill-card group glass-card card-3d magnetic p-6 sm:p-8 rounded-lg
                  hover:border-cyan-400/50 transition-all duration-500 relative overflow-hidden">
        <div class="card-3d-inner">
          <!-- Icon -->
          <div class="w-12 h-12 rounded-lg bg-gradient-to-br from-cyan-500/20 to-blue-600/20 border border-cyan-500/30
                      flex items-center justify-center mb-4 group-hover:shadow-[0_0_20px_rgba(0,255,255,0.3)]
                      transition-shadow duration-300">
            <svg class="w-6 h-6 text-cyan-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4"></path>
            </svg>
          </div>

          <h3 class="text-xl font-bold mb-6 text-white group-hover:text-cyan-400 transition-colors">
            {t.skills.categories.languages.title}
          </h3>

          <div class="mb-6">
            <h4 class="font-mono mb-3 text-xs text-cyan-400/80 uppercase tracking-wider">
              {t.skills.categories.languages.advanced}
            </h4>
            <div class="flex flex-wrap gap-2">
              {t.skills.categories.languages.items.advanced.map((skill: string) => (
                <span class="px-3 py-1.5 bg-gradient-to-r from-cyan-500 to-blue-600 text-white text-xs font-semibold
                             rounded shadow-[0_0_10px_rgba(0,255,255,0.3)]">
                  {skill}
                </span>
              ))}
            </div>
          </div>

          <div>
            <h4 class="font-mono mb-3 text-xs text-gray-500 uppercase tracking-wider">
              {t.skills.categories.languages.intermediate}
            </h4>
            <div class="flex flex-wrap gap-2">
              {t.skills.categories.languages.items.intermediate.map((skill: string) => (
                <span class="px-3 py-1.5 bg-white/5 border border-white/10 text-gray-400 text-xs
                             hover:bg-cyan-500/10 hover:border-cyan-500/30 hover:text-cyan-400
                             transition-all duration-300 rounded">
                  {skill}
                </span>
              ))}
            </div>
          </div>
        </div>

        <!-- Gradient overlay -->
        <div class="absolute inset-0 bg-gradient-to-br from-cyan-500/0 via-cyan-500/0 to-cyan-500/5
                    opacity-0 group-hover:opacity-100 transition-opacity duration-500 pointer-events-none"></div>
      </div>

      <!-- Frameworks -->
      <div class="skill-card group glass-card card-3d magnetic p-6 sm:p-8 rounded-lg
                  hover:border-magenta-400/50 transition-all duration-500 relative overflow-hidden">
        <div class="card-3d-inner">
          <!-- Icon -->
          <div class="w-12 h-12 rounded-lg bg-gradient-to-br from-magenta-500/20 to-blue-600/20 border border-magenta-500/30
                      flex items-center justify-center mb-4 group-hover:shadow-[0_0_20px_rgba(255,0,255,0.3)]
                      transition-shadow duration-300">
            <svg class="w-6 h-6 text-magenta-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 5a1 1 0 011-1h14a1 1 0 011 1v2a1 1 0 01-1 1H5a1 1 0 01-1-1V5zM4 13a1 1 0 011-1h6a1 1 0 011 1v6a1 1 0 01-1 1H5a1 1 0 01-1-1v-6zM16 13a1 1 0 011-1h2a1 1 0 011 1v6a1 1 0 01-1 1h-2a1 1 0 01-1-1v-6z"></path>
            </svg>
          </div>

          <h3 class="text-xl font-bold mb-6 text-white group-hover:text-magenta-400 transition-colors">
            {t.skills.categories.frameworks.title}
          </h3>

          <div class="mb-6">
            <h4 class="font-mono mb-3 text-xs text-magenta-400/80 uppercase tracking-wider">
              {t.skills.categories.frameworks.advanced || t.skills.categories.languages.advanced}
            </h4>
            <div class="flex flex-wrap gap-2">
              {t.skills.categories.frameworks.items.advanced.map((skill: string) => (
                <span class="px-3 py-1.5 bg-gradient-to-r from-magenta-500 to-blue-600 text-white text-xs font-semibold
                             rounded shadow-[0_0_10px_rgba(255,0,255,0.3)]">
                  {skill}
                </span>
              ))}
            </div>
          </div>

          <div>
            <h4 class="font-mono mb-3 text-xs text-gray-500 uppercase tracking-wider">
              {t.skills.categories.frameworks.intermediate || t.skills.categories.languages.intermediate}
            </h4>
            <div class="flex flex-wrap gap-2">
              {t.skills.categories.frameworks.items.intermediate.map((skill: string) => (
                <span class="px-3 py-1.5 bg-white/5 border border-white/10 text-gray-400 text-xs
                             hover:bg-magenta-500/10 hover:border-magenta-500/30 hover:text-magenta-400
                             transition-all duration-300 rounded">
                  {skill}
                </span>
              ))}
            </div>
          </div>
        </div>

        <!-- Gradient overlay -->
        <div class="absolute inset-0 bg-gradient-to-br from-magenta-500/0 via-magenta-500/0 to-magenta-500/5
                    opacity-0 group-hover:opacity-100 transition-opacity duration-500 pointer-events-none"></div>
      </div>

      <!-- Other Tools -->
      <div class="skill-card group glass-card card-3d magnetic p-6 sm:p-8 rounded-lg
                  hover:border-blue-400/50 transition-all duration-500 relative overflow-hidden">
        <div class="card-3d-inner">
          <!-- Icon -->
          <div class="w-12 h-12 rounded-lg bg-gradient-to-br from-blue-500/20 to-cyan-600/20 border border-blue-500/30
                      flex items-center justify-center mb-4 group-hover:shadow-[0_0_20px_rgba(0,128,255,0.3)]
                      transition-shadow duration-300">
            <svg class="w-6 h-6 text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z"></path>
            </svg>
          </div>

          <h3 class="text-xl font-bold mb-6 text-white group-hover:text-blue-400 transition-colors">
            {t.skills.categories.other.title}
          </h3>

          <div class="flex flex-wrap gap-2">
            {t.skills.categories.other.items.map((skill: string) => (
              <span class="px-3 py-1.5 bg-white/5 border border-white/10 text-gray-400 text-xs
                           hover:bg-blue-500/10 hover:border-blue-500/30 hover:text-blue-400
                           transition-all duration-300 rounded">
                {skill}
              </span>
            ))}
          </div>
        </div>

        <!-- Gradient overlay -->
        <div class="absolute inset-0 bg-gradient-to-br from-blue-500/0 via-blue-500/0 to-blue-500/5
                    opacity-0 group-hover:opacity-100 transition-opacity duration-500 pointer-events-none"></div>
      </div>

    </div>
  </div>
</section>
