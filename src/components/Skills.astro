---
const { t } = Astro.props;
---

<section id="skills" class="relative py-12 sm:py-20 overflow-hidden">
  <div class="absolute inset-0 bg-gradient-to-b from-[#0a0a1e] via-[#01012b] to-[#0a0a1e] opacity-50"></div>
  <div class="absolute top-0 left-0 w-full h-1 bg-gradient-to-r from-transparent via-cyan-400 to-transparent"></div>

  <div class="container mx-auto px-4 sm:px-6 relative z-10">
    <h2 class="text-3xl sm:text-4xl md:text-5xl font-black text-center mb-8 sm:mb-12 text-transparent bg-clip-text bg-gradient-to-r from-cyan-400 via-pink-500 to-cyan-400" style="font-family: 'Orbitron', sans-serif;">
      [ {t.skills.title} ]
    </h2>
    <div class="max-w-6xl mx-auto grid grid-cols-1 md:grid-cols-3 gap-6 sm:gap-8">

      <!-- Languages -->
      <div class="group relative bg-[#0a0a1e]/80 p-5 sm:p-6 rounded-lg border-2 border-cyan-400/40 hover:border-cyan-400 transition-all duration-300 backdrop-blur-sm">
        <div class="absolute top-2 left-2 w-3 h-3 bg-cyan-400 rounded-full pulse-glow"></div>
        <h3 class="text-lg sm:text-xl font-bold mb-3 sm:mb-4 text-cyan-400" style="font-family: 'Orbitron', sans-serif;">
          &lt; {t.skills.categories.languages.title} /&gt;
        </h3>
        <div class="mb-4">
          <h4 class="font-semibold mb-2 text-xs sm:text-sm text-pink-500 uppercase tracking-wider">{t.skills.categories.languages.advanced}</h4>
          <div class="flex flex-wrap gap-2">
            {t.skills.categories.languages.items.advanced.map((skill: string) => (
              <span class="px-3 py-1.5 bg-gradient-to-r from-cyan-500 to-cyan-600 text-black rounded font-bold text-xs sm:text-sm transform hover:scale-105 transition-transform cursor-default">
                {skill}
              </span>
            ))}
          </div>
        </div>
        <div>
          <h4 class="font-semibold mb-2 text-xs sm:text-sm text-pink-500 uppercase tracking-wider">{t.skills.categories.languages.intermediate}</h4>
          <div class="flex flex-wrap gap-2">
            {t.skills.categories.languages.items.intermediate.map((skill: string) => (
              <span class="px-3 py-1.5 bg-[#01012b] border border-cyan-400/50 text-cyan-300 rounded font-semibold text-xs sm:text-sm hover:border-cyan-400 hover:text-cyan-400 transition-all cursor-default">
                {skill}
              </span>
            ))}
          </div>
        </div>
      </div>

      <!-- Frameworks -->
      <div class="group relative bg-[#0a0a1e]/80 p-5 sm:p-6 rounded-lg border-2 border-pink-500/40 hover:border-pink-500 transition-all duration-300 backdrop-blur-sm">
        <div class="absolute top-2 left-2 w-3 h-3 bg-pink-500 rounded-full pulse-glow"></div>
        <h3 class="text-lg sm:text-xl font-bold mb-3 sm:mb-4 text-pink-500" style="font-family: 'Orbitron', sans-serif;">
          &lt; {t.skills.categories.frameworks.title} /&gt;
        </h3>
        <div class="mb-4">
          <h4 class="font-semibold mb-2 text-xs sm:text-sm text-cyan-400 uppercase tracking-wider">{t.skills.categories.languages.advanced}</h4>
          <div class="flex flex-wrap gap-2">
            {t.skills.categories.frameworks.items.advanced.map((skill: string) => (
              <span class="px-3 py-1.5 bg-gradient-to-r from-pink-500 to-pink-600 text-black rounded font-bold text-xs sm:text-sm transform hover:scale-105 transition-transform cursor-default">
                {skill}
              </span>
            ))}
          </div>
        </div>
        <div>
          <h4 class="font-semibold mb-2 text-xs sm:text-sm text-cyan-400 uppercase tracking-wider">{t.skills.categories.languages.intermediate}</h4>
          <div class="flex flex-wrap gap-2">
            {t.skills.categories.frameworks.items.intermediate.map((skill: string) => (
              <span class="px-3 py-1.5 bg-[#01012b] border border-pink-500/50 text-pink-300 rounded font-semibold text-xs sm:text-sm hover:border-pink-500 hover:text-pink-500 transition-all cursor-default">
                {skill}
              </span>
            ))}
          </div>
        </div>
      </div>

      <!-- Other Tools -->
      <div class="group relative bg-[#0a0a1e]/80 p-5 sm:p-6 rounded-lg border-2 border-purple-500/40 hover:border-purple-400 transition-all duration-300 backdrop-blur-sm md:col-span-1">
        <div class="absolute top-2 left-2 w-3 h-3 bg-purple-400 rounded-full pulse-glow"></div>
        <h3 class="text-lg sm:text-xl font-bold mb-3 sm:mb-4 text-purple-400" style="font-family: 'Orbitron', sans-serif;">
          &lt; {t.skills.categories.other.title} /&gt;
        </h3>
        <div class="flex flex-wrap gap-2">
          {t.skills.categories.other.items.map((skill: string) => (
            <span class="px-3 py-1.5 bg-gradient-to-r from-purple-500/20 to-purple-600/20 border border-purple-400/50 text-purple-300 rounded font-semibold text-xs sm:text-sm hover:border-purple-400 hover:text-purple-400 hover:bg-purple-500/30 transition-all cursor-default">
              {skill}
            </span>
          ))}
        </div>
      </div>

    </div>
  </div>
</section>
