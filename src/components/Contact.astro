---
const { t } = Astro.props;
---

<section id="contact" class="relative py-20 sm:py-32 overflow-hidden">
  <!-- Decorative background elements -->
  <div class="absolute top-1/2 left-10 w-64 h-64 bg-cyan-500/10 rounded-full blur-3xl pulse-slow"></div>
  <div class="absolute bottom-10 right-10 w-64 h-64 bg-magenta-500/10 rounded-full blur-3xl pulse-slow" style="animation-delay: 2s;"></div>

  <div class="container mx-auto px-4 sm:px-6">
    <div class="max-w-4xl mx-auto">
      <!-- Section header -->
      <div class="text-center mb-12">
        <div class="flex items-center justify-center gap-4 mb-6">
          <div class="w-20 h-0.5 bg-gradient-to-r from-transparent via-cyan-500 to-transparent"></div>
          <p class="text-sm font-mono text-cyan-400/80 tracking-wider">GET_IN_TOUCH://</p>
          <div class="w-20 h-0.5 bg-gradient-to-r from-transparent via-cyan-500 to-transparent"></div>
        </div>
        <h2 class="text-4xl sm:text-5xl md:text-6xl font-bold mb-4">
          <span class="holographic-text">{t.contact.title}</span>
        </h2>
        <p class="text-lg text-gray-400 max-w-2xl mx-auto">{t.contact.subtitle}</p>
      </div>

      <!-- Location badge -->
      <div class="flex justify-center mb-12">
        <div class="glass-card px-6 py-3 rounded-full border border-cyan-500/30 inline-flex items-center gap-3">
          <div class="w-2 h-2 bg-green-400 rounded-full animate-pulse shadow-[0_0_10px_rgba(34,197,94,0.5)]"></div>
          <svg class="w-5 h-5 text-cyan-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
          </svg>
          <span class="text-sm text-gray-300 font-medium">{t.contact.location}</span>
        </div>
      </div>

      <!-- Contact cards -->
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        <!-- WhatsApp -->
        <a href="https://wa.me/525554986769" target="_blank"
           class="magnetic group glass-card card-3d p-8 rounded-lg hover:border-green-400/50
                  transition-all duration-500 relative overflow-hidden">
          <div class="card-3d-inner text-center">
            <div class="w-16 h-16 mx-auto mb-4 rounded-xl bg-gradient-to-br from-green-500/20 to-green-600/20
                        border border-green-500/30 flex items-center justify-center
                        group-hover:shadow-[0_0_30px_rgba(34,197,94,0.3)] transition-shadow duration-300">
              <svg class="w-8 h-8 text-green-400" fill="currentColor" viewBox="0 0 24 24">
                <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413Z"/>
              </svg>
            </div>
            <h3 class="text-sm font-mono text-green-400/80 uppercase tracking-wider mb-2">WHATSAPP</h3>
            <p class="text-white font-medium group-hover:text-green-400 transition-colors">
              {t.contact.buttons.whatsapp}
            </p>
          </div>
          <div class="absolute inset-0 bg-gradient-to-br from-green-500/0 to-green-500/5
                      opacity-0 group-hover:opacity-100 transition-opacity duration-500 pointer-events-none rounded-lg"></div>
        </a>

        <!-- Email -->
        <a href="mailto:iskra.zvezda@gmail.com"
           class="magnetic group glass-card card-3d p-8 rounded-lg hover:border-cyan-400/50
                  transition-all duration-500 relative overflow-hidden">
          <div class="card-3d-inner text-center">
            <div class="w-16 h-16 mx-auto mb-4 rounded-xl bg-gradient-to-br from-cyan-500/20 to-cyan-600/20
                        border border-cyan-500/30 flex items-center justify-center
                        group-hover:shadow-[0_0_30px_rgba(0,255,255,0.3)] transition-shadow duration-300">
              <svg class="w-8 h-8 text-cyan-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
              </svg>
            </div>
            <h3 class="text-sm font-mono text-cyan-400/80 uppercase tracking-wider mb-2">EMAIL</h3>
            <p class="text-white font-medium group-hover:text-cyan-400 transition-colors">
              {t.contact.buttons.email}
            </p>
          </div>
          <div class="absolute inset-0 bg-gradient-to-br from-cyan-500/0 to-cyan-500/5
                      opacity-0 group-hover:opacity-100 transition-opacity duration-500 pointer-events-none rounded-lg"></div>
        </a>

        <!-- LinkedIn -->
        <a href="https://www.linkedin.com/in/israel-gc" target="_blank"
           class="magnetic group glass-card card-3d p-8 rounded-lg hover:border-blue-400/50
                  transition-all duration-500 relative overflow-hidden">
          <div class="card-3d-inner text-center">
            <div class="w-16 h-16 mx-auto mb-4 rounded-xl bg-gradient-to-br from-blue-500/20 to-blue-600/20
                        border border-blue-500/30 flex items-center justify-center
                        group-hover:shadow-[0_0_30px_rgba(0,128,255,0.3)] transition-shadow duration-300">
              <svg class="w-8 h-8 text-blue-400" fill="currentColor" viewBox="0 0 24 24">
                <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
              </svg>
            </div>
            <h3 class="text-sm font-mono text-blue-400/80 uppercase tracking-wider mb-2">LINKEDIN</h3>
            <p class="text-white font-medium group-hover:text-blue-400 transition-colors">
              {t.contact.buttons.linkedin}
            </p>
          </div>
          <div class="absolute inset-0 bg-gradient-to-br from-blue-500/0 to-blue-500/5
                      opacity-0 group-hover:opacity-100 transition-opacity duration-500 pointer-events-none rounded-lg"></div>
        </a>
      </div>

      <!-- Decorative terminal-style footer -->
      <div class="mt-12 glass-card p-6 rounded-lg border-l-4 border-cyan-500">
        <p class="font-mono text-sm text-gray-400">
          <span class="text-cyan-400">$</span> echo <span class="text-green-400">"Let's build something amazing together"</span>
        </p>
      </div>
    </div>
  </div>
</section>
