---
const { t } = Astro.props;
---

<header class="sticky top-0 z-50 glass-card border-b border-cyan-500/20">
  <nav class="container mx-auto px-4 py-4">
    <div class="flex justify-between items-center">
      <!-- Logo with holographic effect -->
      <a href="#" class="group flex items-center gap-2">
        <div class="w-10 h-10 rounded-lg bg-gradient-to-br from-cyan-500 to-blue-600 flex items-center justify-center
                    shadow-[0_0_20px_rgba(0,255,255,0.3)] group-hover:shadow-[0_0_30px_rgba(0,255,255,0.5)]
                    transition-all duration-300">
          <span class="text-white font-bold text-lg">AZ</span>
        </div>
        <span class="text-lg font-bold holographic-text hidden sm:block">
          Arturo Zvezda
        </span>
      </a>

      <!-- Desktop Menu -->
      <div class="hidden md:flex gap-6 items-center">
        <a href="#about" class="nav-link magnetic text-gray-400 hover:text-cyan-400 transition-colors duration-300 text-sm font-medium relative group">
          <span>{t.nav.about}</span>
          <div class="absolute -bottom-1 left-0 w-0 h-0.5 bg-gradient-to-r from-cyan-500 to-blue-500 group-hover:w-full transition-all duration-300"></div>
        </a>
        <a href="#experience" class="nav-link magnetic text-gray-400 hover:text-cyan-400 transition-colors duration-300 text-sm font-medium relative group">
          <span>{t.nav.experience}</span>
          <div class="absolute -bottom-1 left-0 w-0 h-0.5 bg-gradient-to-r from-cyan-500 to-blue-500 group-hover:w-full transition-all duration-300"></div>
        </a>
        <a href="#projects" class="nav-link magnetic text-gray-400 hover:text-cyan-400 transition-colors duration-300 text-sm font-medium relative group">
          <span>{t.nav.projects}</span>
          <div class="absolute -bottom-1 left-0 w-0 h-0.5 bg-gradient-to-r from-cyan-500 to-blue-500 group-hover:w-full transition-all duration-300"></div>
        </a>
        <a href="#skills" class="nav-link magnetic text-gray-400 hover:text-cyan-400 transition-colors duration-300 text-sm font-medium relative group">
          <span>{t.nav.skills}</span>
          <div class="absolute -bottom-1 left-0 w-0 h-0.5 bg-gradient-to-r from-cyan-500 to-blue-500 group-hover:w-full transition-all duration-300"></div>
        </a>
        <a href="#contact" class="nav-link magnetic text-gray-400 hover:text-cyan-400 transition-colors duration-300 text-sm font-medium relative group">
          <span>{t.nav.contact}</span>
          <div class="absolute -bottom-1 left-0 w-0 h-0.5 bg-gradient-to-r from-cyan-500 to-blue-500 group-hover:w-full transition-all duration-300"></div>
        </a>

        <!-- Language Switcher Desktop -->
        <div class="relative lang-switcher-desktop">
          <button id="lang-button-desktop" class="magnetic flex items-center gap-2 px-4 py-2 border border-cyan-500/30 rounded-lg
                                                   text-cyan-400 hover:bg-cyan-500/10 hover:border-cyan-400
                                                   hover:shadow-[0_0_15px_rgba(0,255,255,0.3)]
                                                   transition-all duration-300 text-sm font-medium">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5h12M9 3v2m1.048 9.5A18.022 18.022 0 016.412 9m6.088 9h7M11 21l5-10 5 10M12.751 5C11.783 10.77 8.07 15.61 3 18.129"></path>
            </svg>
            <span class="current-lang">ES</span>
            <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
            </svg>
          </button>
          <div id="lang-menu-desktop" class="hidden absolute right-0 mt-2 w-32 glass-card rounded-lg overflow-hidden
                                            border border-cyan-500/20 shadow-[0_8px_32px_rgba(0,0,0,0.4)]">
            <button class="lang-option w-full px-4 py-2 text-left text-sm text-gray-400 hover:bg-cyan-500/10
                          hover:text-cyan-400 transition-all duration-200" data-lang="en">English</button>
            <button class="lang-option w-full px-4 py-2 text-left text-sm text-gray-400 hover:bg-cyan-500/10
                          hover:text-cyan-400 transition-all duration-200" data-lang="es">Español</button>
            <button class="lang-option w-full px-4 py-2 text-left text-sm text-gray-400 hover:bg-cyan-500/10
                          hover:text-cyan-400 transition-all duration-200" data-lang="fr">Français</button>
          </div>
        </div>
      </div>

      <!-- Mobile Menu Toggle & Language Button -->
      <div class="md:hidden flex items-center gap-3">
        <!-- Language Switcher Mobile -->
        <div class="relative lang-switcher-mobile">
          <button id="lang-button-mobile" class="flex items-center gap-1 px-3 py-2 border border-cyan-500/30 rounded-lg
                                                 text-cyan-400 hover:bg-cyan-500/10 transition-all duration-300 text-sm">
            <span class="current-lang-mobile">ES</span>
            <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
            </svg>
          </button>
          <div id="lang-menu-mobile" class="hidden absolute right-0 mt-2 w-28 glass-card rounded-lg overflow-hidden
                                           border border-cyan-500/20 shadow-[0_8px_32px_rgba(0,0,0,0.4)]">
            <button class="lang-option-mobile w-full px-3 py-2 text-left text-xs text-gray-400 hover:bg-cyan-500/10
                          hover:text-cyan-400 transition-all duration-200" data-lang="en">EN</button>
            <button class="lang-option-mobile w-full px-3 py-2 text-left text-xs text-gray-400 hover:bg-cyan-500/10
                          hover:text-cyan-400 transition-all duration-200" data-lang="es">ES</button>
            <button class="lang-option-mobile w-full px-3 py-2 text-left text-xs text-gray-400 hover:bg-cyan-500/10
                          hover:text-cyan-400 transition-all duration-200" data-lang="fr">FR</button>
          </div>
        </div>
        <button id="mobile-menu-toggle" class="p-2 border border-cyan-500/30 rounded-lg text-cyan-400
                                               hover:bg-cyan-500/10 transition-all duration-300">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
          </svg>
        </button>
      </div>
    </div>

    <!-- Mobile Menu -->
    <div id="mobile-menu" class="hidden md:hidden mt-4 pb-4 flex flex-col gap-3 border-t border-cyan-500/20 pt-4">
      <a href="#about" class="text-gray-400 hover:text-cyan-400 hover:bg-cyan-500/10 transition-all duration-200
                              py-2 px-3 rounded-lg text-sm">{t.nav.about}</a>
      <a href="#experience" class="text-gray-400 hover:text-cyan-400 hover:bg-cyan-500/10 transition-all duration-200
                                   py-2 px-3 rounded-lg text-sm">{t.nav.experience}</a>
      <a href="#projects" class="text-gray-400 hover:text-cyan-400 hover:bg-cyan-500/10 transition-all duration-200
                                 py-2 px-3 rounded-lg text-sm">{t.nav.projects}</a>
      <a href="#skills" class="text-gray-400 hover:text-cyan-400 hover:bg-cyan-500/10 transition-all duration-200
                               py-2 px-3 rounded-lg text-sm">{t.nav.skills}</a>
      <a href="#contact" class="text-gray-400 hover:text-cyan-400 hover:bg-cyan-500/10 transition-all duration-200
                                py-2 px-3 rounded-lg text-sm">{t.nav.contact}</a>
    </div>
  </nav>
</header>
