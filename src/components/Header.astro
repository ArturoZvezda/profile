---
const { t } = Astro.props;
---

<header class="sticky top-0 z-50 bg-[#0a0a0a]/95 backdrop-blur-sm border-b border-[#2a2a2a]">
  <nav class="container mx-auto px-4 py-6">
    <div class="flex justify-between items-center">
      <a href="#" class="text-xl font-semibold text-white tracking-tight">
        Arturo Zvezda
      </a>

      <!-- Desktop Menu -->
      <div class="hidden md:flex gap-8 items-center">
        <a href="#about" class="text-gray-400 hover:text-white transition-colors duration-200 text-sm">{t.nav.about}</a>
        <a href="#experience" class="text-gray-400 hover:text-white transition-colors duration-200 text-sm">{t.nav.experience}</a>
        <a href="#projects" class="text-gray-400 hover:text-white transition-colors duration-200 text-sm">{t.nav.projects}</a>
        <a href="#skills" class="text-gray-400 hover:text-white transition-colors duration-200 text-sm">{t.nav.skills}</a>
        <a href="#contact" class="text-gray-400 hover:text-white transition-colors duration-200 text-sm">{t.nav.contact}</a>

        <!-- Language Switcher Desktop -->
        <div class="relative lang-switcher-desktop">
          <button id="lang-button-desktop" class="flex items-center gap-2 px-4 py-1.5 border border-[#2a2a2a] text-gray-400 hover:text-white hover:border-gray-600 transition-all duration-200 text-sm">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5h12M9 3v2m1.048 9.5A18.022 18.022 0 016.412 9m6.088 9h7M11 21l5-10 5 10M12.751 5C11.783 10.77 8.07 15.61 3 18.129"></path>
            </svg>
            <span class="current-lang">EN</span>
            <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
            </svg>
          </button>
          <div id="lang-menu-desktop" class="hidden absolute right-0 mt-2 w-32 bg-[#141414] border border-[#2a2a2a] shadow-lg z-50">
            <button class="lang-option w-full px-4 py-2 text-left text-sm text-gray-400 hover:bg-[#1a1a1a] hover:text-white transition-colors" data-lang="en">English</button>
            <button class="lang-option w-full px-4 py-2 text-left text-sm text-gray-400 hover:bg-[#1a1a1a] hover:text-white transition-colors" data-lang="es">Español</button>
            <button class="lang-option w-full px-4 py-2 text-left text-sm text-gray-400 hover:bg-[#1a1a1a] hover:text-white transition-colors" data-lang="fr">Français</button>
          </div>
        </div>
      </div>

      <!-- Mobile Menu Toggle & Language Button -->
      <div class="md:hidden flex items-center gap-3">
        <!-- Language Switcher Mobile -->
        <div class="relative lang-switcher-mobile">
          <button id="lang-button-mobile" class="flex items-center gap-1 px-3 py-1.5 border border-[#2a2a2a] text-gray-400 hover:text-white transition-colors duration-200 text-sm">
            <span class="current-lang-mobile">EN</span>
            <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
            </svg>
          </button>
          <div id="lang-menu-mobile" class="hidden absolute right-0 mt-2 w-28 bg-[#141414] border border-[#2a2a2a] shadow-lg z-50">
            <button class="lang-option-mobile w-full px-3 py-2 text-left text-xs text-gray-400 hover:bg-[#1a1a1a] hover:text-white transition-colors" data-lang="en">EN</button>
            <button class="lang-option-mobile w-full px-3 py-2 text-left text-xs text-gray-400 hover:bg-[#1a1a1a] hover:text-white transition-colors" data-lang="es">ES</button>
            <button class="lang-option-mobile w-full px-3 py-2 text-left text-xs text-gray-400 hover:bg-[#1a1a1a] hover:text-white transition-colors" data-lang="fr">FR</button>
          </div>
        </div>
        <button id="mobile-menu-toggle" class="p-2 text-gray-400 hover:text-white transition-colors">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
          </svg>
        </button>
      </div>
    </div>

    <!-- Mobile Menu -->
    <div id="mobile-menu" class="hidden md:hidden mt-4 pb-4 flex flex-col gap-4 border-t border-[#2a2a2a] pt-4">
      <a href="#about" class="text-gray-400 hover:text-white transition-colors duration-200 py-2 text-sm">{t.nav.about}</a>
      <a href="#experience" class="text-gray-400 hover:text-white transition-colors duration-200 py-2 text-sm">{t.nav.experience}</a>
      <a href="#projects" class="text-gray-400 hover:text-white transition-colors duration-200 py-2 text-sm">{t.nav.projects}</a>
      <a href="#skills" class="text-gray-400 hover:text-white transition-colors duration-200 py-2 text-sm">{t.nav.skills}</a>
      <a href="#contact" class="text-gray-400 hover:text-white transition-colors duration-200 py-2 text-sm">{t.nav.contact}</a>
    </div>
  </nav>
</header>
