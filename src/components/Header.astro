---
const { t } = Astro.props;
---

<header class="sticky top-0 z-50 bg-[#01012b]/90 backdrop-blur-md border-b-2 border-cyan-400/30 shadow-lg shadow-cyan-500/10">
  <nav class="container mx-auto px-4 py-4">
    <div class="flex justify-between items-center">
      <a href="#" class="text-2xl font-bold text-cyan-400 neon-text-pink tracking-wider" style="font-family: 'Orbitron', sans-serif;">
        &lt;AIGC/&gt;
      </a>

      <!-- Desktop Menu -->
      <div class="hidden md:flex gap-8 items-center">
        <a href="#about" class="text-cyan-300 hover:text-cyan-400 transition-all duration-300 hover:drop-shadow-[0_0_8px_rgba(5,217,232,0.8)] font-medium uppercase text-sm tracking-wide">{t.nav.about}</a>
        <a href="#experience" class="text-cyan-300 hover:text-cyan-400 transition-all duration-300 hover:drop-shadow-[0_0_8px_rgba(5,217,232,0.8)] font-medium uppercase text-sm tracking-wide">{t.nav.experience}</a>
        <a href="#projects" class="text-cyan-300 hover:text-cyan-400 transition-all duration-300 hover:drop-shadow-[0_0_8px_rgba(5,217,232,0.8)] font-medium uppercase text-sm tracking-wide">{t.nav.projects}</a>
        <a href="#skills" class="text-cyan-300 hover:text-cyan-400 transition-all duration-300 hover:drop-shadow-[0_0_8px_rgba(5,217,232,0.8)] font-medium uppercase text-sm tracking-wide">{t.nav.skills}</a>
        <a href="#contact" class="text-cyan-300 hover:text-cyan-400 transition-all duration-300 hover:drop-shadow-[0_0_8px_rgba(5,217,232,0.8)] font-medium uppercase text-sm tracking-wide">{t.nav.contact}</a>

        <button id="lang-toggle-desktop" class="px-4 py-2 rounded border-2 border-cyan-400 text-cyan-400 hover:bg-cyan-400 hover:text-[#01012b] transition-all duration-300 font-bold neon-button" style="font-family: 'Orbitron', sans-serif;">
          <span class="lang-text">ES</span>
        </button>
      </div>

      <!-- Mobile Menu Toggle & Language Button -->
      <div class="md:hidden flex items-center gap-3">
        <button id="lang-toggle-mobile" class="px-3 py-1.5 rounded border-2 border-cyan-400 text-cyan-400 hover:bg-cyan-400 hover:text-[#01012b] transition-all duration-300 font-bold text-sm neon-button" style="font-family: 'Orbitron', sans-serif;">
          <span class="lang-text">ES</span>
        </button>
        <button id="mobile-menu-toggle" class="p-2 text-cyan-400 hover:text-pink-500 transition-colors">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
          </svg>
        </button>
      </div>
    </div>

    <!-- Mobile Menu -->
    <div id="mobile-menu" class="hidden md:hidden mt-4 pb-4 flex flex-col gap-4 border-t border-cyan-400/30 pt-4">
      <a href="#about" class="text-cyan-300 hover:text-cyan-400 transition-all duration-300 py-2 font-medium uppercase text-sm tracking-wide">{t.nav.about}</a>
      <a href="#experience" class="text-cyan-300 hover:text-cyan-400 transition-all duration-300 py-2 font-medium uppercase text-sm tracking-wide">{t.nav.experience}</a>
      <a href="#projects" class="text-cyan-300 hover:text-cyan-400 transition-all duration-300 py-2 font-medium uppercase text-sm tracking-wide">{t.nav.projects}</a>
      <a href="#skills" class="text-cyan-300 hover:text-cyan-400 transition-all duration-300 py-2 font-medium uppercase text-sm tracking-wide">{t.nav.skills}</a>
      <a href="#contact" class="text-cyan-300 hover:text-cyan-400 transition-all duration-300 py-2 font-medium uppercase text-sm tracking-wide">{t.nav.contact}</a>
    </div>
  </nav>
</header>
