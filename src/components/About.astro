---
const { t } = Astro.props;
---

<section id="about" class="relative py-20 sm:py-32">
  <div class="container mx-auto px-4 sm:px-6">
    <h2 class="text-3xl sm:text-4xl font-semibold text-white mb-12">
      {t.about.title}
    </h2>
    <div class="max-w-3xl">
      <p class="text-lg text-gray-400 leading-relaxed">
        {t.about.text}
      </p>
    </div>
  </div>
</section>
