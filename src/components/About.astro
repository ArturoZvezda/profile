---
const { t } = Astro.props;
---

<section id="about" class="relative py-20 sm:py-32 overflow-hidden">
  <!-- Section header with accent line -->
  <div class="container mx-auto px-4 sm:px-6">
    <div class="flex items-center gap-4 mb-12">
      <div class="w-2 h-16 bg-gradient-to-b from-cyan-500 to-blue-600 rounded-full"></div>
      <div>
        <p class="text-sm font-mono text-cyan-400/80 tracking-wider mb-1">{t.decorative.aboutMe}</p>
        <h2 class="text-4xl sm:text-5xl font-bold text-white">
          {t.about.title}
        </h2>
      </div>
    </div>

    <!-- Content with glass effect and 3D depth -->
    <div class="max-w-4xl relative">
      <div class="glass-card p-8 sm:p-12 card-3d magnetic group">
        <div class="card-3d-inner">
          <p class="text-lg sm:text-xl text-gray-300 leading-relaxed mb-6">
            {t.about.text}
          </p>

          <!-- Decorative code-like accent -->
          <div class="mt-8 pt-6 border-t border-cyan-500/20">
            <div class="flex flex-wrap gap-4 items-center">
              <div class="flex items-center gap-2 text-sm font-mono">
                <span class="text-cyan-400">$</span>
                <span class="text-gray-500">{t.about.status.label}</span>
                <span class="text-green-400">{t.about.status.value}</span>
              </div>
              <div class="flex items-center gap-2 text-sm font-mono">
                <span class="text-cyan-400">$</span>
                <span class="text-gray-500">{t.about.location.label}</span>
                <span class="text-gray-400">{t.about.location.value}</span>
              </div>
              <div class="flex items-center gap-2 text-sm font-mono">
                <span class="text-cyan-400">$</span>
                <span class="text-gray-500">{t.about.mode.label}</span>
                <span class="text-magenta-400">{t.about.mode.value}</span>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Floating accent elements -->
      <div class="absolute -right-10 top-10 w-40 h-40 border border-cyan-500/10 rounded-lg -z-10 subtle-float"></div>
      <div class="absolute -left-10 bottom-10 w-32 h-32 border border-magenta-500/10 rounded-lg -z-10 subtle-float" style="animation-delay: 2s;"></div>
    </div>
  </div>
</section>
