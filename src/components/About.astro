---
const { t } = Astro.props;
---

<section id="about" class="relative py-12 sm:py-20 overflow-hidden">
  <!-- Background accent -->
  <div class="absolute inset-0 bg-gradient-to-b from-[#01012b] via-[#0a0a1e] to-[#01012b] opacity-50"></div>
  <div class="absolute top-0 left-0 w-full h-1 bg-gradient-to-r from-transparent via-cyan-400 to-transparent"></div>

  <div class="container mx-auto px-4 sm:px-6 relative z-10">
    <h2 class="text-3xl sm:text-4xl md:text-5xl font-black text-center mb-8 sm:mb-12 text-transparent bg-clip-text bg-gradient-to-r from-cyan-400 to-pink-500" style="font-family: 'Orbitron', sans-serif;">
      [ {t.about.title} ]
    </h2>
    <div class="max-w-4xl mx-auto px-4">
      <div class="relative p-8 sm:p-10 rounded-lg bg-[#0a0a1e]/60 border-2 border-cyan-400/30 backdrop-blur-sm cyber-border">
        <p class="text-base sm:text-lg text-gray-300 leading-relaxed relative z-10">
          {t.about.text}
        </p>

        <!-- Corner decorations -->
        <div class="absolute top-0 left-0 w-4 h-4 border-l-2 border-t-2 border-cyan-400"></div>
        <div class="absolute top-0 right-0 w-4 h-4 border-r-2 border-t-2 border-pink-500"></div>
        <div class="absolute bottom-0 left-0 w-4 h-4 border-l-2 border-b-2 border-pink-500"></div>
        <div class="absolute bottom-0 right-0 w-4 h-4 border-r-2 border-b-2 border-cyan-400"></div>
      </div>
    </div>
  </div>
</section>
