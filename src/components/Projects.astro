---
const { t } = Astro.props;
---

<section id="projects" class="relative py-12 sm:py-20 overflow-hidden">
  <div class="absolute inset-0 bg-gradient-to-b from-[#0a0a1e] via-[#01012b] to-[#0a0a1e] opacity-50"></div>
  <div class="absolute top-0 left-0 w-full h-1 bg-gradient-to-r from-transparent via-cyan-400 to-transparent"></div>

  <div class="container mx-auto px-4 sm:px-6 relative z-10">
    <div class="text-center mb-8 sm:mb-12">
      <h2 class="text-3xl sm:text-4xl md:text-5xl font-black mb-3 sm:mb-4 text-transparent bg-clip-text bg-gradient-to-r from-cyan-400 via-pink-500 to-purple-400" style="font-family: 'Orbitron', sans-serif;">
        [ {t.projects.title} ]
      </h2>
      <p class="text-base sm:text-lg text-cyan-300 font-medium">{t.projects.subtitle}</p>
    </div>

    <div class="max-w-7xl mx-auto grid grid-cols-1 lg:grid-cols-2 gap-6 sm:gap-8">
      {t.projects.items.map((project: any, index: number) => (
        <div class="group relative bg-[#0a0a1e]/80 p-6 sm:p-8 rounded-lg border-2 border-cyan-400/20 hover:border-pink-500/50 transition-all duration-300 backdrop-blur-sm transform hover:scale-[1.02]">
          <!-- Corner decorations -->
          <div class="absolute top-0 left-0 w-6 h-6 border-l-2 border-t-2 border-cyan-400 opacity-50 group-hover:opacity-100 transition-opacity"></div>
          <div class="absolute bottom-0 right-0 w-6 h-6 border-r-2 border-b-2 border-pink-500 opacity-50 group-hover:opacity-100 transition-opacity"></div>

          <!-- Project number -->
          <div class="absolute top-3 right-3 text-5xl sm:text-6xl font-black text-cyan-400/5 group-hover:text-pink-500/10 transition-colors" style="font-family: 'Orbitron', sans-serif;">
            {(index + 1).toString().padStart(2, '0')}
          </div>

          <!-- Industry badge -->
          <div class="inline-block mb-3">
            <span class="px-3 py-1 bg-gradient-to-r from-purple-500/20 to-purple-600/20 border border-purple-400/50 text-purple-300 rounded-full text-xs font-bold uppercase tracking-wider">
              {project.industry}
            </span>
          </div>

          <!-- Title -->
          <h3 class="text-xl sm:text-2xl font-bold text-cyan-400 mb-3 group-hover:text-pink-500 transition-colors relative z-10" style="font-family: 'Orbitron', sans-serif;">
            &gt;&gt; {project.title}
          </h3>

          <!-- Description -->
          <p class="text-sm sm:text-base text-gray-400 mb-4 leading-relaxed relative z-10">
            {project.description}
          </p>

          <!-- Highlights -->
          <div class="mb-4 relative z-10">
            <h4 class="text-xs font-bold text-pink-500 uppercase tracking-wider mb-2">Key Features:</h4>
            <div class="grid grid-cols-2 gap-2">
              {project.highlights.map((highlight: string) => (
                <div class="flex items-start gap-2">
                  <div class="w-1.5 h-1.5 bg-cyan-400 rounded-full mt-1.5 flex-shrink-0"></div>
                  <span class="text-xs text-gray-400">{highlight}</span>
                </div>
              ))}
            </div>
          </div>

          <!-- Tech Stack -->
          <div class="relative z-10">
            <h4 class="text-xs font-bold text-cyan-400 uppercase tracking-wider mb-2">Tech Stack:</h4>
            <div class="flex flex-wrap gap-2">
              {project.stack.split(', ').map((tech: string) => (
                <span class="px-2.5 py-1 bg-[#01012b] border border-cyan-400/50 text-cyan-400 rounded text-xs font-semibold hover:border-pink-500 hover:text-pink-500 transition-all duration-200">
                  {tech}
                </span>
              ))}
            </div>
          </div>

          <!-- Glow effect on hover -->
          <div class="absolute inset-0 bg-gradient-to-r from-cyan-500/0 via-pink-500/5 to-purple-500/0 opacity-0 group-hover:opacity-100 transition-opacity duration-300 rounded-lg pointer-events-none"></div>
        </div>
      ))}
    </div>

    <!-- Industries covered section -->
    <div class="mt-12 sm:mt-16 text-center">
      <div class="inline-block px-8 py-4 bg-[#0a0a1e]/60 border-2 border-cyan-400/30 rounded-lg backdrop-blur-sm">
        <h4 class="text-sm font-bold text-cyan-400 uppercase tracking-wider mb-3" style="font-family: 'Orbitron', sans-serif;">
          Industries Served
        </h4>
        <div class="flex flex-wrap justify-center gap-3">
          {['Hospitality', 'Telecom', 'Logistics', 'Healthcare', 'Retail', 'Non-Profit', 'Security'].map((industry) => (
            <span class="px-4 py-2 bg-gradient-to-r from-pink-500/10 to-purple-500/10 border border-pink-500/30 text-pink-300 rounded-full text-xs sm:text-sm font-semibold hover:border-pink-500 hover:bg-pink-500/20 transition-all cursor-default">
              {industry}
            </span>
          ))}
        </div>
      </div>
    </div>
  </div>
</section>
