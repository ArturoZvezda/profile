---
const { t } = Astro.props;
---

<section id="projects" class="relative py-20 sm:py-32">
  <div class="container mx-auto px-4 sm:px-6">
    <div class="mb-12">
      <h2 class="text-3xl sm:text-4xl font-semibold text-white mb-3">
        {t.projects.title}
      </h2>
      <p class="text-base text-gray-500">{t.projects.subtitle}</p>
    </div>

    <div class="max-w-6xl grid grid-cols-1 lg:grid-cols-2 gap-8">
      {t.projects.items.map((project: any) => (
        <div class={`project-card group relative ${project.special ? 'bg-gradient-to-br from-[#1a1a1a] to-[#0f0f0f] border-white/20' : 'bg-[#0f0f0f] border-[#2a2a2a]'} p-6 border hover:border-gray-600 transition-all duration-300 scale-hover parallax-container`}>
          {project.special && (
            <div class="absolute top-0 right-0 px-3 py-1 bg-white text-black text-xs font-bold uppercase tracking-wider">
              {t.projects.featured}
            </div>
          )}

          <!-- Industry badge -->
          <div class="mb-4">
            <span class={`px-3 py-1 ${project.special ? 'bg-white/10 border-white/30 text-gray-300' : 'bg-[#141414] border-[#2a2a2a] text-gray-600'} border text-xs uppercase tracking-wide`}>
              {project.industry}
            </span>
          </div>

          <!-- Title -->
          <h3 class={`text-xl font-semibold ${project.special ? 'text-white' : 'text-white'} mb-3`}>
            {project.title}
          </h3>

          <!-- Description -->
          <p class="text-sm text-gray-500 mb-4 leading-relaxed">
            {project.description}
          </p>

          <!-- Highlights -->
          <div class="mb-4">
            <h4 class="text-xs font-medium text-gray-600 uppercase tracking-wider mb-2">{t.projects.keyFeatures}</h4>
            <div class="grid grid-cols-2 gap-2">
              {project.highlights.map((highlight: string) => (
                <div class="flex items-start gap-2">
                  <div class="w-1 h-1 bg-gray-600 rounded-full mt-2 flex-shrink-0"></div>
                  <span class="text-xs text-gray-600">{highlight}</span>
                </div>
              ))}
            </div>
          </div>

          <!-- Tech Stack -->
          <div>
            <h4 class="text-xs font-medium text-gray-600 uppercase tracking-wider mb-2">{t.projects.techStack}</h4>
            <div class="flex flex-wrap gap-2">
              {project.stack.split(', ').map((tech: string) => (
                <span class="px-2.5 py-1 bg-[#141414] border border-[#2a2a2a] text-gray-600 text-xs">
                  {tech}
                </span>
              ))}
            </div>
          </div>
        </div>
      ))}
    </div>

    <!-- Industries covered section -->
    <div class="mt-16">
      <h4 class="text-sm font-medium text-gray-600 uppercase tracking-wider mb-4">
        {t.projects.industriesServed}
      </h4>
      <div class="flex flex-wrap gap-3">
        {t.projects.industries.map((industry: string) => (
          <span class="px-4 py-2 bg-[#141414] border border-[#2a2a2a] text-gray-600 text-sm">
            {industry}
          </span>
        ))}
      </div>
    </div>
  </div>
</section>
