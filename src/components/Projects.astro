---
const { t } = Astro.props;
---

<section id="projects" class="relative py-20 sm:py-32 overflow-hidden">
  <div class="container mx-auto px-4 sm:px-6">
    <!-- Section header -->
    <div class="flex items-center gap-4 mb-4">
      <div class="w-2 h-16 bg-gradient-to-b from-magenta-500 to-blue-600 rounded-full"></div>
      <div>
        <p class="text-sm font-mono text-magenta-400/80 tracking-wider mb-1">{t.decorative.portfolio}</p>
        <h2 class="text-4xl sm:text-5xl font-bold text-white">
          {t.projects.title}
        </h2>
      </div>
    </div>
    <p class="text-lg text-gray-400 mb-12 ml-6">{t.projects.subtitle}</p>

    <div class="max-w-6xl grid grid-cols-1 lg:grid-cols-2 gap-8">
      {t.projects.items.map((project: any, index: number) => (
        <div class={`project-card group relative glass-card card-3d magnetic overflow-hidden
                     ${project.special ? 'border-cyan-500/30' : 'border-white/5'}
                     hover:border-cyan-400/50 transition-all duration-500`}>
          {project.special && (
            <div class="absolute top-0 right-0 px-4 py-1.5 bg-gradient-to-r from-cyan-500 to-blue-600
                        text-white text-xs font-bold uppercase tracking-wider z-10
                        shadow-[0_0_20px_rgba(0,255,255,0.5)]">
              {t.projects.featured}
            </div>
          )}

          <div class="card-3d-inner p-6 sm:p-8">
            <!-- Industry badge -->
            <div class="mb-4">
              <span class={`px-4 py-1.5 rounded-full text-xs font-semibold uppercase tracking-wide
                           ${project.special
                             ? 'bg-cyan-500/20 text-cyan-400 border border-cyan-500/30'
                             : 'bg-magenta-500/20 text-magenta-400 border border-magenta-500/30'}`}>
                {project.industry}
              </span>
            </div>

            <!-- Title -->
            <h3 class="text-2xl font-bold text-white mb-3 group-hover:text-cyan-400 transition-colors">
              {project.title}
            </h3>

            <!-- Description -->
            <p class="text-sm text-gray-400 mb-6 leading-relaxed">
              {project.description}
            </p>

            <!-- Highlights -->
            <div class="mb-6">
              <h4 class="text-xs font-mono text-cyan-400/80 uppercase tracking-wider mb-3">
                {t.projects.keyFeatures}
              </h4>
              <div class="grid grid-cols-2 gap-3">
                {project.highlights.map((highlight: string) => (
                  <div class="flex items-start gap-2">
                    <div class="w-1.5 h-1.5 bg-cyan-400 rounded-full mt-1.5 flex-shrink-0 shadow-[0_0_5px_rgba(0,255,255,0.5)]"></div>
                    <span class="text-xs text-gray-300">{highlight}</span>
                  </div>
                ))}
              </div>
            </div>

            <!-- Tech Stack -->
            <div>
              <h4 class="text-xs font-mono text-cyan-400/80 uppercase tracking-wider mb-3">
                {t.projects.techStack}
              </h4>
              <div class="flex flex-wrap gap-2">
                {project.stack.split(', ').map((tech: string) => (
                  <span class="px-3 py-1.5 bg-white/5 border border-white/10 text-gray-400 text-xs
                               rounded hover:bg-cyan-500/10 hover:border-cyan-500/30 hover:text-cyan-400
                               transition-all duration-300">
                    {tech}
                  </span>
                ))}
              </div>
            </div>
          </div>

          <!-- Hover glow effect -->
          <div class="absolute inset-0 bg-gradient-to-br from-cyan-500/0 via-cyan-500/0 to-cyan-500/5
                      opacity-0 group-hover:opacity-100 transition-opacity duration-500 pointer-events-none"></div>
        </div>
      ))}
    </div>

    <!-- Industries covered section -->
    <div class="mt-16 glass-card p-8 rounded-lg">
      <h4 class="text-sm font-mono text-blue-400/80 uppercase tracking-wider mb-6">
        {t.projects.industriesServed}
      </h4>
      <div class="flex flex-wrap gap-3">
        {t.projects.industries.map((industry: string) => (
          <span class="magnetic px-5 py-2.5 glass-card rounded-full text-gray-300 text-sm font-medium
                       border border-white/10 hover:border-blue-500/50 hover:text-blue-400
                       hover:shadow-[0_0_20px_rgba(0,128,255,0.3)] transition-all duration-300">
            {industry}
          </span>
        ))}
      </div>
    </div>
  </div>
</section>
